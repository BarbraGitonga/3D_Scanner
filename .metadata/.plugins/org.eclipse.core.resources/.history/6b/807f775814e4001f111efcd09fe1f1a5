#include "stm32f7xx_hal.h"
#include "stm32f7xx_hal_i2c.h"  // For I2C communication
#include "stm32f7xx_hal_gpio.h" // For GPIO functions
#include "stm32f7xx_hal_i2c_ex.h"
#include "i2c.h"
#include "MPU6050.h"

#ifndef MPU6050_I2C_DRIVER_H
#define MPU6050_I2C_DRIVER_H

#define SELF_TEST_X         0x0D
#define SELF_TEST_Y         0x0E
#define SELF_TEST_Z         0x0F
#define SELF_TEST_A         0x10

#define GYRO_CONFIG         0x1B
#define ACCEL_CONFIG        0x1C

//acceleration readings
#define ACCEL_XOUT_H        0x3B
#define ACCEL_XOUT_L        0x3C
#define ACCEL_YOUT_H        0x3D
#define ACCEL_YOUT_L        0x3E
#define ACCEL_ZOUT_H        0x3F
#define ACCEL_ZOUT_L        0x40

//temperature readings
#define TEMP_OUT_H          0x41
#define TEMP_OUT_L          0x42

//gyroscope readings
#define GYRO_XOUT_H         0x43
#define GYRO_XOUT_L         0x44
#define GYRO_YOUT_H         0x45
#define GYRO_YOUT_L         0x46
#define GYRO_ZOUT_H         0x47
#define GYRO_ZOUT_L         0x48

//identity
#define WHO_AM_I            0x75
#define MPU6050_ID          0x68 //default value of who am i register

//power management 1 parameters
#define PWR_MGMT_1          0x6B

//Power management 2
#define PWR_MGMT_2          0x6C

typedef struct{
	/* I2C Handle */
	 extern I2C_HandleTypeDef I2cHandle;


	/* Acceleration data (X, Y, Z ) in m/s^2 */
	float acc_mps2[3];

	/* Gyroscope data (X, Y, Z ) in m/s^2 */
	float acc_mps2[3];

	/* Temperature data in deg */
	float temp_C;
} MPU;



class MPU6050{
public:
	MPU6050();
	~MPU6050();
	HAL_StatusTypeDef readRegister(mpu *dev, uint8_t regAddress, uint8_t *data);
	HAL_StatusTypeDef writeRegister(mpu *dev, uint8_t regAddress, uint8_t *data);
	HAL_StatusTypeDef burstReadRegisters(mpu *dev, uint8_t starting_reg, uint8_t data, int8_t* buffer);
	String identity();
	HAL_StatusTypeDef initialize( MPU *dev, i2C HandleTypeDef *i2cHandle );
	HAL_StatusTypeDef test();
	HAL_StatusTypeDef gyroscope(MPU *dev);
	HAL_StatusTypeDef accelerometer(MPU *dev);
	HAL_StatusTypeDef temperature(MPU *dev);
};

#endif
